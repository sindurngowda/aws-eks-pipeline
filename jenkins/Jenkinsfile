pipeline {
    agent any
    
    environment {
        AWS_REGION = 'us-east-1'
        CLUSTER_NAME = 'my-eks-cluster'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Terraform Provision') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                    script {
                        env.ECR_URL = sh(script: 'terraform output -raw ecr_repository_url', returnStdout: true).trim()
                    }
                }
            }
        }
        
        stage('Build & Push Docker Image') {
            steps {
                script {
                    sh "aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_URL}"
                    dir('app') {
                        sh "docker build -t ${ECR_URL}:v${BUILD_NUMBER} ."
                        sh "docker push ${ECR_URL}:v${BUILD_NUMBER}"
                    }
                }
            }
        }
        
        stage('Deploy to EKS') {
            steps {
                script {
                    sh "aws eks --region ${AWS_REGION} update-kubeconfig --name ${CLUSTER_NAME}"
                    dir('helm') {
                        sh "helm upgrade --install my-app ./my-app --set image.repository=${ECR_URL} --set image.tag=v${BUILD_NUMBER}"
                    }
                }
            }
        }
    }
}
